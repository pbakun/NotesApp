<UserControl x:Class="NotesApp.View.UserControls.NoteControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NotesApp.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="300">
    <StackPanel>
        <TextBlock x:Name="titleTextBlock"
                   Text="Note title"
                   FontSize="15"
                   FontWeight="Bold"/>
        <TextBlock x:Name="editedTextBlock"
                   Text="19 minutes"
                   FontSize="12"
                   FontWeight="Bold"
                   Foreground="DodgerBlue"/>
        <TextBlock x:Name="contentTextBlock"
                   Text="Lorem ipsum bla lorom bla pierdolamento bla bla bla bla bla"
                   FontSize="12"
                   FontWeight="Bold"
                   Foreground="DarkGray"
                   TextWrapping="Wrap"/>
    </StackPanel>
</UserControl>
